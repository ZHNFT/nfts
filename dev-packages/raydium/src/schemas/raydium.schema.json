{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Raydium Configurations",
  "description": "Defines configuration used by raydium",
  "type": "object",

  "definitions": {
    "anything": {
      "type": ["array", "boolean", "integer", "number", "object", "string"],
      "items": {
        "$ref": "#/definitions/anything"
      }
    }
  },

  "additionalProperties": false,

  "properties": {
    "$schema": {
      "type": "string"
    },
    "$extends": {
      "type": "string"
    },

    "plugins": {
      "type": "array",
      "description": "Defines plugin used by raydium",
      "items": {
        "type": "string",
        "description": "Path to plugin"
      }
    }
  }
}
