{
  "compilerOptions": {
    // common
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ESNext",
    // feature
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "strictNullChecks": true
  },
  "exclude": []
}
