{
  "compilerOptions": {
    "skipLibCheck": true,
    "module": "ESNext",
    "target": "ES6",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "strict": true,
    "declaration": true,
    "declarationMap": false,
    "typeRoots": ["node_modules/@types"],
    "paths": {},
    "lib": ["DOM", "DOM.Iterable", "ESNext"]
  },
  "include": ["**/src"],
  "exclude": ["**/node_modules"]
}
