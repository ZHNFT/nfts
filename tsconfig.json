{
  "compilerOptions": {
    "module": "Commonjs",
    "target": "ES2020",
    "declaration": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": false,
    "types": ["@types/node", "@types/jest"],
    "noImplicitAny": true,
    "skipLibCheck": true,
    "strict": true
  },
  "exclude": ["**/node_modules/**/*", "**/*.(test|spec).*", "**/template/**/*"]
}
