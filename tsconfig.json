{
  "compilerOptions": {
    "skipLibCheck": true,
    // common
    "module": "ES6",
    "target": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    // features
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "strict": true,
    // dts
    "declaration": true,
    "declarationMap": true,
    "typeRoots": ["node_modules/@types"],
    // paths
    "paths": {}
  },
  "include": ["**/src/*.ts"],
  "exclude": ["**/node_modules"]
}
