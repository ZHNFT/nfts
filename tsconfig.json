{
  "compilerOptions": {
    "skipLibCheck": true,
    "module": "ESNext",
    "target": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "strict": true,
    "declaration": true,
    "declarationMap": false,
    "typeRoots": ["node_modules/@types"],
    "baseUrl": ".",
    "lib": ["DOM", "DOM.Iterable", "ESNext"]
  }
}
