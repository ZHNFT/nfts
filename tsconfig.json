{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",

    // module
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "importHelpers": true,

    // code style
    "strict": true,
    "alwaysStrict": true,
    "allowJs": false,
    "checkJs": false,

    // dts
    "declaration": true,
    "sourceMap": false
  }
}
