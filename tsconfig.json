{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    // module
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    // code style
    "strict": true,
    "alwaysStrict": true,
    // dts
    "declaration": true,
    "outDir": "lib"
  },
  "exclude": [
    "tests/",
    "__tests__/",
    "assets/",
    "output/",
    "temp/",
    "lib/",
    "etc/",
    "dist/"
  ]
}
