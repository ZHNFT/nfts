{
  "$schema": "http://json-schema.org/draft-04/schema",
  "title": "ntfs.json project schemas",
  "description": "manage your packages in one repo",
  "type": "object",
  "properties": {
    "$schema": {
      "description": "Part of the JSON Schema standard, this optional keyword declares the URL of the schema that the file conforms to. Editors may download the schema and use it to perform syntax highlighting.",
      "type": "string"
    },
    "packages": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/packageDefinition"
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "plugins": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/pluginDefinition"
      }
    },
    "packageManager": {
      "type": "string",
      "enum": [
        "pnpm",
        "yarn",
        "npm"
      ]
    }
  },
  "$defs": {
    "packageDefinition": {
      "type": "object",
      "required": [
        "directory",
        "packageName",
        "description"
      ],
      "additionalProperties": false,
      "properties": {
        "directory": {
          "type": "string"
        },
        "packageName": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }
      }
    },
    "pluginDefinition": {
      "type": "object",
      "required": [
        "pluginName",
        "description"
      ],
      "additionalProperties": false,
      "properties": {
        "pluginName": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }
      }
    }
  }
}
