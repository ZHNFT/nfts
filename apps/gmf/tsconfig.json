{
  "compilerOptions": {
    "module": "esnext",
    "target": "ES2017",
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": false,
    "types": ["node", "jest"],
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "include": ["src/"],
  "exclude": ["node_modules/", "test/", "**/__tests__/**"]
}
