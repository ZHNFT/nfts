{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://json-schema.org/draft/2020-12/output/schema",
  "description": "Schema for gmf project",
  "type": "object",
  "properties": {
    "output": { "type": "string", "description": "Specified path where build/bundled files generate" },
    "bundle": {
      "type": "object",
      "properties": {
        "entry": {
          "oneOf": [{ "type": "string" }, { "type": "array", "items": { "type": "string" } }]
        },
        "output": { "type": "string" },
        "target": {
          "oneOf": [
            { "type": "string", "enum": ["CommonJS", "AMD", "UMD", "ESNext", "System"] },
            {
              "type": "array",
              "uniqueItems": true,
              "items": {
                "type": "string",
                "enum": ["CommonJS", "AMD", "UMD", "ESNext", "System"]
              }
            }
          ]
        }
      }
    },
    "build": {
      "type": "object"
    },
    "plugins": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "pluginName": { "type": "string" }
        }
      }
    }
  }
}
