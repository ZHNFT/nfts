{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Gmf Json Schema",
  "description": "",
  "type": "object",

  "properties": {
    "name": {
      "description": "App name",
      "type": "string"
    },
    "buildPath": {
      "type": "string"
    },
    "plugins": {
      "description": "Where plugin configuration belong",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "options": {
            "type": "object"
          }
        }
      }
    },
    "events": {
      "description": "Where command-line option bind events happens",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          }
        }
      }
    }
  },
  "required": ["name", "buildPath"]
}
